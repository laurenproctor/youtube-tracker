%h1 Welcome to Bedrocket Tracker
= form_tag(unlock_path, method: :post) do
  %h1 Enter Password
  .inset
    %p
      %label{:for => "password"} PASSWORD
      %input#password{:name => "password", :placeholder => "Password", :type => "password"}/
    %p
      %input#remember{:name => "remember", :type => "checkbox"}/
      %label{:for => "remember"} Remember me for 14 days
  %p.p-container
    %span Forgot password?
    %input#go{:name => "go", :type => "submit", :value => "Log in"}/
